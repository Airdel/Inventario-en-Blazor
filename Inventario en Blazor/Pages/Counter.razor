@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p role="alert">Multiplicador: @multiplicado</p>
<button class="btn btn-primary" @onclick="multiplicador"> dar clic</button>
@code {
    private int currentCount = 0;
    private int multiplicado = 2;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void multiplicador() => multiplicado = multiplicado * 2;
}